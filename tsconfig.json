{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "types": [
            "react", "jest"
        ], // yarn tsc 시 오류 해결됨.,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"],
            "tests": ["tests/*"],

            "@components/*": ["src/components/*"]
        }
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
